<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Bagian atas -->


        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:layout_editor_absoluteX="0dp">

            <!-- Text di sebelah kiri -->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="Mulai Gunakan Fitur \n Deteksi Kata Serapan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Gambar di tengah -->
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/illu" />
        </LinearLayout>


        <!-- Hot Feature -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="160dp"


            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:layout_editor_absoluteX="0dp">

            <!-- Judul Hot Feature -->
            <TextView
                android:id="@+id/hot_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hot Feature"
                android:textColor="@color/bluenew"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.091"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <!-- Icon dan teks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Item 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iconEvents"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/telor_asin"
                        android:padding="10dp"
                        android:src="@drawable/description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laporan"
                        android:textSize="12dp"
                        android:layout_marginTop="10dp"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Item 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/scan"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/bluenew"
                        android:padding="10dp"
                        android:src="@drawable/notif_dashboard" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textSize="12dp"
                        android:layout_marginTop="10dp"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Item 4 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/community"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="@color/emas"
                        android:padding="10dp"
                        android:src="@drawable/monitoring_dashboard"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monitoring"
                        android:textSize="12dp"
                        android:layout_marginTop="10dp"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- RecyclerView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="408dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            tools:layout_editor_absoluteX="1dp">

            <TextView
                android:id="@+id/monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Stats"
                android:textColor="@color/bluenew"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.091"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:background="@drawable/dashboard_rounded"
                    android:padding="15dp">

                    <!-- Left Icon -->
                    <ImageView
                        android:id="@+id/icon_cemberut"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/cemberut" /> <!-- Replace with your warning icon -->

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 Kata Serapan Dideteksi"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Uhh Anda Rajinnn !!!"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Right Icon -->
                    <ImageView
                        android:id="@+id/iconDislikePertama"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/dislike" /> <!-- Replace with your dislike icon -->

                </LinearLayout>

                <!-- Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:background="@drawable/dashboard_rounded"
                    android:padding="15dp">

                    <!-- Left Icon -->
                    <ImageView
                        android:id="@+id/icon_click"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/monitoring"
                        app:tint="@color/white" /> <!-- Replace with your warning icon -->

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0x Mode Monitoring Diaktifkan"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anda Bagus, Terus Timba Ilmu Anda !!!"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Right Icon -->
                    <ImageView
                        android:id="@+id/iconDislikeKedua"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/dislike" /> <!-- Replace with your dislike icon -->

                </LinearLayout>
                <!-- Item 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:background="@drawable/dashboard_rounded"
                    android:padding="15dp">

                    <!-- Left Icon -->
                    <ImageView
                        android:id="@+id/iconWarning"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/vector"
                        app:tint="@color/white" /> <!-- Replace with your warning icon -->

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0x Laporan Dikirimkan"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bagus, Kamu Sering Menggunakannya"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Right Icon -->
                    <ImageView
                        android:id="@+id/iconDislike"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/dislike" /> <!-- Replace with your dislike icon -->

                </LinearLayout>



            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

