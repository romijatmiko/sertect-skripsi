<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Item 1 -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_duration="800"
        app:shimmer_repeat_count="@integer/material_motion_duration_medium_2"
        app:shimmer_base_color="#DDDDDD"
        app:shimmer_highlight_color="#EEEEEE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:elevation="10dp"
            android:background="@drawable/dashboard_rounded"
            android:backgroundTint="@color/white">

            <!-- Top section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Icon placeholder -->
                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/skeleton_background"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Title placeholder -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="@drawable/skeleton_background"/>

                    <!-- Date placeholder -->
                    <View
                        android:layout_width="150dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/skeleton_background"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Middle section: Tags -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <View
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/skeleton_background"/>

                <View
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/skeleton_background"/>

                <View
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/skeleton_background"/>
            </LinearLayout>

            <!-- Bottom section: Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <View
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@drawable/skeleton_background"/>
            </LinearLayout>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

